doctype html
html(lang='en' prefix='og: http://ogp.me/ns#')

  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title #{title}
    != partial('_favicon')
    link(rel='canonical', href='https://treymoody.org/')
    meta(name='description', content='#{description}')
    
    meta(property='og:title', content='Trey Moody')
    meta(property='og:url', content='https://treymoody.org/')
    meta(property='og:type', content='website')
    meta(property='og:description', content='#{description}')
    meta(property='og:image', content='https://treymoody.org/images/trey-moody-photo.jpg')
    
    meta(name='twitter:card', content='summary')
    meta(name='twitter:title', content='Trey Moody - poetry, publications, events')
    meta(name='twitter:url', content='https://treymoody.org/')
    meta(name='twitter:image', content='https://treymoody.org/images/trey-moody-photo.jpg')
    
    link(rel='stylesheet', href='main.css')
    
    script(type='application/ld+json')
      include ./_schema.js
    != partial('_gtag')
  
  body
    #page

      != yield

      != partial('_footer')

    != partial('_gtag')
